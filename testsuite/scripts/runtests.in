#!/bin/sh

PYTHONPATH=@TESTSUITE_PYTHONPATH@:$PYTHONPATH

export PYTHONPATH

if [ "x$*" = "x" ]; then
    PYTEST_DEFAULT_ARGS="-vv @CMAKE_CURRENT_SOURCE_DIR@/tests"
else
    PYTEST_DEFAULT_ARGS=""
fi

exec @TESTSUITE_PYTHON_BINARY@ -m pytest --build-dir=@CMAKE_BINARY_DIR@ \
     $PYTEST_ARGS $PYTEST_DEFAULT_ARGS "$@"
